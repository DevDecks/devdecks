{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "app/plugins/**/*"
  ]
}